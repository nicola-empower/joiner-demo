---
import "../styles/global.css";
import Header from "../components/Header.jsx";
import LocalSeoFooter from "../components/LocalSeoFooter.astro";
import StickyCTA from "../components/StickyCTA.jsx";

interface Props {
    title: string;
    description?: string;
    service?: string;
    city?: string;
    areas?: string[];
    postcodes?: string[];
    phone?: string;
}

const {
    title,
    description = "Bespoke Joinery and Carpentry",
    service = "Joinery Services",
    city = "Cambridge",
    areas = ["Ely", "Newmarket", "Saffron Walden", "Royston", "Haverhill"],
    postcodes = ["CB1", "CB2", "CB7", "CB8", "CB10"],
    phone = "01223 900 123",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- Heritage Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Source+Sans+Pro:wght@400;600&family=Space+Grotesk:wght@700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="min-h-screen flex flex-col overflow-x-hidden font-body selection:bg-accent selection:text-white"
    >
        <a href="https://empowerdigitalsolutions.co.uk/trades" class="fixed top-4 left-4 z-[9999] bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium hover:bg-black transition-all border border-white/20 shadow-lg no-underline backdrop-blur-sm">&larr; Back</a>
        
        <!-- Sticky Header (Desktop) -->
        <Header client:load title={title.split(" - ")[0]} phone={phone} />

        <!-- Sticky CTA (Mobile) -->
        <StickyCTA client:load number={phone} label="Request Quote" />

        <slot />

        <LocalSeoFooter
            service={service}
            city={city}
            areas={areas}
            postcodes={postcodes}
        />

        <footer class="bg-gray-900 text-white py-12 pb-32 md:pb-12 border-t border-white/10">
            <div
                class="max-w-7xl mx-auto px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-6"
            >
                <div class="text-sm text-gray-400">
                    &copy; {new Date().getFullYear()}
                    {title}. All rights reserved. <span class="mx-2 opacity-50">|</span> <a href="https://empowerdigitalsolutions.co.uk/trades" class="hover:text-white transition-colors">Back</a>
                </div>
                <div class="flex gap-6">
                    <a
                        href="/admin"
                        class="group relative inline-flex items-center gap-3 px-6 py-3 bg-white/5 border border-white/10 rounded-full hover:bg-white/10 hover:border-accent/50 transition-all duration-300"
                    >
                        <span class="flex h-8 w-8 items-center justify-center rounded-full bg-accent text-white group-hover:scale-110 transition-transform">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><rect
                                    width="18"
                                    height="18"
                                    x="3"
                                    y="3"
                                    rx="2"
                                    ry="2"></rect><path d="M9 3v18"></path><path
                                    d="m14 9 3 3-3 3"></path></svg
                            >
                        </span>
                        <div class="text-left">
                            <p class="text-xs text-gray-400 font-medium uppercase tracking-wider">Site Owner</p>
                            <p class="text-sm font-bold text-white group-hover:text-accent transition-colors">Access Admin Portal</p>
                        </div>
                    </a>
                </div>
            </div>
        </footer>
    </body>
</html>
