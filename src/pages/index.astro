---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import ProjectTransformation from "../components/ProjectTransformation.jsx";
import ProjectGallery from "../components/ProjectGallery.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ServiceAreaMap from "../components/ServiceAreaMap.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import SafetyGuarantee from "../components/SafetyGuarantee.jsx";
---

<Layout title="Oak & Chisel - Master Bespoke Joinery">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Fine woodworking craftsmanship background"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-2xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all"
						>
							Handcrafted in our local workshop <a
								href="#"
								class="font-semibold text-accent"
								><span
									class="absolute inset-0"
									aria-hidden="true"></span>Visit Us <span
									aria-hidden="true">&rarr;</span
								></a
							>
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Bespoke Joinery & <span class="text-accent"
							>Fine Cabinetry</span
						>
					</h1>
					<p
						class="mt-6 text-lg leading-8 text-gray-200 drop-shadow-md"
					>
						Combining traditional techniques with modern precision.
						We create custom furniture, staircases, and fitted
						wardrobes designed to last a lifetime.
					</p>
					<div class="mt-10 flex items-center gap-x-6">
						<a
							href="#"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Discuss Your Project
						</a>
						<a
							href="#"
							class="text-lg font-semibold leading-6 text-white hover:text-accent transition-colors"
						>
							Gallery <span aria-hidden="true">â†’</span>
						</a>
					</div>
				</div>
			</div>

			<!-- Glassmorphism Stats -->
			<div
				class="absolute bottom-0 left-0 right-0 bg-white/5 backdrop-blur-md border-t border-white/10 py-8"
			>
				<div
					class="mx-auto max-w-7xl px-6 lg:px-8 flex justify-around text-white text-center"
				>
					<div>
						<div class="text-3xl font-bold text-accent">3rd</div>
						<div class="text-sm text-gray-300">Generation</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">100%</div>
						<div class="text-sm text-gray-300">Bespoke</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">
							Lifetime
						</div>
						<div class="text-sm text-gray-300">Assurance</div>
					</div>
				</div>
			</div>
		</div>

		<div class="relative z-20 bg-white"><TrustBar client:visible /></div>

		<!-- Services Feature Section -->
		<FeatureSection
			client:visible
			title="Master Craftsmanship"
			subtitle="Bespoke Joinery"
			description="From custom staircases to heritage window restoration, we bring decades of experience to every cut, joint, and finish."
			features={[
				{
					title: "Custom Furniture",
					desc: "Built-in wardrobes, bookcases, and alcove units.",
				},
				{
					title: "Architectural Joinery",
					desc: "Staircases, doors, and heritage sash windows.",
				},
				{
					title: "Kitchen Fitting",
					desc: "Precision installation of luxury kitchen suites.",
				},
			]}
			imageSrc="/hero.png"
			quote="The level of detail in our new library shelves is simply astounding. It's the centerpiece of the room."
			author="Mrs. H. Reynolds, Ely"
			align="left"
		/>

		<!-- Visual Showcase Section -->
		<div class="py-24 bg-white">
			<div class="mx-auto max-w-7xl px-6 lg:px-8 flex flex-col gap-20">
				<!-- Feature 1: The Transformation -->
				<div>
					<div class="mb-10 text-center md:text-left">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">
							Case Study: The Evening Garden
						</h3>
						<p class="text-gray-600 max-w-2xl">
							See how we transformed a standard garden into a
							luxury multi-level entertainment space, complete
							with integrated lighting for evening hosting.
						</p>
					</div>
					<ProjectTransformation client:visible />
				</div>

				<!-- Feature 2: Gallery Grid -->
				<div>
					<div class="mb-10 text-center md:text-left">
						<h3 class="text-2xl font-bold text-gray-900 mb-4">
							Recent Commission: Walk-in Wardrobe
						</h3>
						<p class="text-gray-600 max-w-2xl">
							A fully bespoke dressing room fit-out featuring
							floor-to-ceiling walnut cabinetry and soft-close
							hardware.
						</p>
					</div>
					<ProjectGallery client:visible />
				</div>
			</div>
		</div>

		<ProcessFlow client:visible />

		<!-- Service Area Map Section -->
		<div class="py-24 bg-white">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Local Coverage
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-primary sm:text-4xl"
					>
						Serving Cambridge & East Anglia
					</p>
					<p class="mt-4 text-lg text-gray-500">
						Expert joinery services across Ely, Newmarket, Saffron
						Walden, and surrounding villages.
					</p>
				</div>
				<ServiceAreaMap
					client:only="react"
					center={[52.2053, 0.1218]}
					city="Cambridge"
					radiusMiles={20}
				/>
			</div>
		</div>

		<Testimonials client:visible />
		<SafetyGuarantee client:visible />
		<FAQ client:visible />
	</main>
</Layout>
